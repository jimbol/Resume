html, body, div, span, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
abbr, address, cite, code,
del, dfn, em, img, ins, kbd, q, samp,
small, strong, sub, sup, var,
b, i,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, figcaption, figure,
footer, header, hgroup, menu, nav, section, summary,
time, mark, audio, video, button {
    margin:0;
    padding:0;
    border:0;
    outline:0;
    font-size:100%;
    vertical-align:baseline;
    background:transparent;
}

body {
    line-height:1;
}

article,aside,details,figcaption,figure,
footer,header,hgroup,menu,nav,section {
    display:block;
}

nav ul {
    list-style:none;
}

blockquote, q {
    quotes:none;
}

blockquote:before, blockquote:after,
q:before, q:after {
    content:'';
    content:none;
}

a {
    margin:0;
    padding:0;
    font-size:100%;
    vertical-align:baseline;
    background:transparent;
}

/* change colours to suit your needs */
ins {
    background-color:#ff9;
    color:#000;
    text-decoration:none;
}

/* change colours to suit your needs */
mark {
    background-color:#ff9;
    color:#000;
    font-style:italic;
    font-weight:bold;
}

del {
    text-decoration: line-through;
}

abbr[title], dfn[title] {
    border-bottom:1px dotted;
    cursor:help;
}

table {
    border-collapse:collapse;
    border-spacing:0;
}

/* change border colour to suit your needs */
hr {
    display:block;
    height:1px;
    border:0;
    border-top:1px solid #cccccc;
    margin:1em 0;
    padding:0;
}

input, select {
    vertical-align:middle;
}

html {
  font-size: 62.5%;
}

body {
  font-family: arial;
  color: #5E2C1E;
}

.application {
  font-size: 1.6rem;
  min-width: 5.4rem;


  .content-area {
    max-width:  1115px;
    margin: 0 auto;
  }

  .page-header {
    margin: 0 1.5rem;
    position: relative;
    min-height: 8rem;

    h1, h2 {
      float: left;
      clear: left;
    }

  }

}



// Base elements
// ===========================================================================================
h1 {
  font-family: "kg_happy_solidregular", arial;
  color: #fff;
  font-size: 4.9rem;
}

h2 {
  font-family: "kg_happy_solidregular", arial;
  font-size: 1.5rem;
  color: #FF724D;
  line-height: 2rem;
  text-transform: uppercase;
}

h3 {
  font-family: "kg_happy_solidregular", arial;
  font-size: 1.3rem;
  color: #FFF;
  line-height: 2rem;

}

a {
  color: inherit;
  &:hover {
    color: #FF724D;
  }
}

button {
  display: inline-block;
  padding: 0.4rem 0.6rem 0.6rem;
  margin: 0;
  margin-top: 1rem;
  color: #ed8c72;
  background-color: #fff;
  font-size: 1.6rem;
  cursor: pointer;
  font-family: "kg_happy_solidregular",arial;

  &:hover {
    color: #FFF;
    background-color: #FFAC96;
  }
}

ul.nav {
  a {
    text-decoration: none;
  }
  list-style: none;
  right: 0;
  position: absolute;
}


// Reusable Elements
// ===========================================================================================
.pill-list {
  margin: 0;

  li {
    display: inline-block;
    padding: 0.4rem 0.6rem
    margin: 0 0.4rem 0.4rem 0;
    color: #FFF;
    background-color: #ff724d;
    font-size: 1.3rem;
    min-height: 2rem;
    line-height: 2rem;
  }

  li.pill-button {
    cursor: pointer;
    transition: border-left 0.2s, background-color 0.2s;

    &:hover {
      background-color: #FFEBE6;
    }
  }
}

.inverted .pill-list,
.pill-list.inverted {
  li {
    background-color: #fff;
    color: #5E2C1E;
  }
}

// Row / Column layout
// ===========================================================================================
// rows
.row {
  width: 100%;
  height: 100%;
  padding: 6rem 0;

  h1 {
    color: #ff724d;
  }

  h2 {
    padding-bottom: 0.5rem;
    color: #ff724d;
  }

  h3 {
    color: #ff724d;
  }

  h4 {
    color: #ff724d;
    font-weight: normal;
    float: right;
  }
}


// colums
.colum {
  display: inline-block;
  vertical-align: top;
  overflow: hidden;

  .colum-content {
    margin: 0 1.5rem;
    line-height: 2rem;
    padding-bottom: 1.5rem;
  }
}

.third {
  width: 33%;
  margin-bottom: 20px;
}

.half {
  width: 50%;
}

.cover-row {
  color: #fff;
  padding-top: 3rem;
  border-bottom: 3px solid #FF724D;
  background-repeat: no-repeat;
  background-image: url("/assets/jim_banner.jpg");
  background-size: 100%;
  background-position-y: top;
  background-position-x: left;
  height: 43rem;

  h1 {
    color: #ed8c72;
    text-shadow: 3px 3px #5e2c1e;
  }

  h2 {
    color: #5e2c1e;
    text-shadow: 1px 1px rgba(255,255,255,.75);
  }

  .callout {
    padding-top: 1.5rem;
    background-color: #fff;
    color: #5e2c1e;
  }

}


.row.inverted {
  color: #fff;
  background-color: #ED8C72;

  h1, h2, h3 {
    color: #fff;
  }

}

.header-row.inverted,
.header-row.normal {
  padding: 6rem 0 4rem;
}

.sub-row.inverted,
.sub-row.normal {
  padding: 0 0 4rem;
}

.block-colum-title {
  display: block;
  margin: 0 1.5rem;
  padding-bottom: 1.5rem;
}

.row.job {
  height: auto;
  padding: 0.75rem 0;

  h2 {
    padding-bottom: 0.5rem;
  }

  h3 {
    color: #ff724d;
  }

  h4 {
    color: #ff724d;
    font-weight: normal;
    float: right;
  }

  @media (max-width: 800px) {
    h4 {
      float: left;
    }
  }

}

.job-list {
  width: 200%;
  transition: margin-left 0.2s;

  h3 {
    display: inline-block;
  }

  h4 {
    display: block;
    font-size: 1.4rem;
  }

  .focused-job, .pill-list {
    display: inline-block;
    vertical-align: top;
    width: 50%;
  }

  .focused-job {
    background-color: #fff;
    color: #5e2c1e;
    padding-top: 1rem;
    padding-bottom: 1rem;
    font-size: 1.3rem;

    h3, h4 {
      color: #ff724d;
    }

    * {
      margin-right: 0.75rem;
      margin-left: 0.75rem;
    }
  }
}

.job-list[data-focused='focused'] {
  margin-left: -100%;
}

.modal-mask {
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 2;
  font-size: 1.6rem;

  .modal-content {
    background-color: #fff;
    min-height: 45rem;
    max-width: 70rem;
    margin: 0 auto;
    margin-top: 1%;

    .nav {
      padding: 1rem 1.5rem 0 1.5rem;
      color: #ff724d;
      font-size: 24px;
      cursor: pointer;

      &:hover {
        color: #f2c6bb;
      }
    }
  }
}

@media (max-width: 800px) {
  .colum {
    width: 100% !important;

  }


  ul.nav {
    list-style: none;
    right: 0;
    position: relative;

    li.pill-button {
      display: block;
      background-color: #ffebe6;

      &:hover {
        background-color: #ed8c72;
      }
    }
  }

  .row h1 {
    font-size: 3rem;
  }

  .cover-row {
    min-height: 30rem;
    background-image: none;
    margin-bottom: 1.5rem;
    height: auto;

    h1 {
      font-size: 4.9rem;
    }

    button {
      background-color: #ffebe6;
    }
  }

  .application .page-header {
    margin: 0 1.5rem;
    position: relative;
    min-height: 8rem;

    h1, h2 {
      float: none;
      clear: none;
    }

  }
}

.nav {
  ul {
    margin: 0;
    padding: 0;

    li {
      display: inline-block;
    }
  }
}

@media (min-width: 1000px) {
  .cover-row {
    height: 55rem;
  }
}

